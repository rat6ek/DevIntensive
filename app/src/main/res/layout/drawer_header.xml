<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
    android:paddingTop="@dimen/spacing_medial_24"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/drawer_header_bg">

    <ImageView
        android:id="@+id/drawer_header_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/user_avatar"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/user_name_txt"
            android:text="Ратбек Нурланбек уулу"
            android:fontFamily="sans-serif-medium"
            style="@style/drawer_header_tv"
            />
        <TextView
            android:id="@+id/user_email_txt"
            android:text="email@example.io"
            android:fontFamily="sans-serif"
            style="@style/drawer_header_tv"/>

    </LinearLayout>

</RelativeLayout>